<%= markup do |m|
	p = UserFormPresenter.new(f, self) 
	m << p.notes 
	p.with_options(required: true) do |q|
		m << q.text_field_block(:email, 'Email', size: 32) 
		m << q.password_field_block(:password, 'Password', size: 32) 
		m << q.full_name_block(:family_name, :given_name, 'Name') 
		m << q.full_name_block(:family_name_kana, :given_name_kana, 'フリガナ')
		m << q.date_field_block(:start_date, 'Start date') 
		m << q.date_field_block(:end_date, 'End date', required: false) 
	end
	m << p.check_boxes 
end %>


